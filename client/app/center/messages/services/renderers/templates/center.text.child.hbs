<div class="msg-item text text-child">
  <div class="text-msg-item-container">
    <div class="msg-item-body">
      <!-- TEXT -->
      <div class="msg-text">
        {{#if isSticker}}
          <img class="sticker size_5" src="{{msg.message.content.url}}"/>
        {{else}}
          <span class="keep msg-text-body _compile">{{{ msg.message.content.body }}}</span>
        {{/if}}
        <!--  TIME  -->
        <span class="msg-item-header__created">{{ msg.extTime }}</span>

        <!--  UNREAD COUNT  -->
        <span class="badge unread-badge">{{ msg.unreadCount }}</span>
      </div>
      <div class="msg-extra">
        <!--More -->
        {{#if hasMore}}
          <span class="msg-item-icon _textMore">
            <i class="icon-more-fill msg-item__action msg-item-circle msg-item-more cursor_pointer _textMore"></i>
          </span>
        {{/if}}
        <!--Star -->
        {{#if hasStar}}
          <span class="cursor_pointer msg-item-star msg-item-icon msg-item-circle _star {{css.star}}">
            <i class="icon-star-fill"></i>
          </span>
        {{/if}}
      </div>
    </div>
  </div>
  {{{html.linkPreview}}}
</div>
