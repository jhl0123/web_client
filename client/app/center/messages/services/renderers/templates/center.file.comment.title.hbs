<div class="{{ css.wrapper }}">
  <div class="msg-item-body">
    <!--    COMMENT
            최초 댓글
            DISPLAY COMMENT BODY WHEN IT IS TITLE
            IF CURRENT COMMENT IS NOT TITLE, CONTENT GETS DISPLAYED WITHIN HEADER -->
    <div class="msg-item">
      <i class="icon-file"></i>
      <!-- FILE -->
      <div class="msg-file">
        {{#if isArchived}}
          <!--  ARCHIVED FILE PREVIEW IMAGE  -->
          <div class="preview-container">
            <div class="preview-card cursor_pointer _compile">
              <div class="msg-file-actions-content actions-dimmed _fileGo"></div>
              <div class="msg-file-actions-content non-selectable">
                <div class="msg-file-actions">
                  <div class="action-group">
                    <div class="action-item"
                         jnd-tooltip-trigger="{{translate '@btn-file-detail'}}"
                         data-direction="top">
                      <!--  FILE DETAIL -->
                      <i class="action-file-detail icon-arrow-right _fileDetail"></i>
                    </div>
                  </div>
                </div>
              </div>

              <!--  ARCHIVED FILE -->
              <div class="card-type">
                <img class="fileicon" src="assets/images/fileicon_archived.png">
              </div>
              <div class="card-info card-archived">
                <span class="info-title">{{translate '@common-deleted-file-title'}}</span>
              </div>
            </div>
          </div>
        {{else}}
          {{#if file.hasPermission}}
            {{#if file.mustPreview}}
              <!--  FILE INFO -->
              <div class="msg-file-meta">
                <div class="msg-file-meta-up">
                  <!--  NOT ARCHIVED FILE -->
                  <!--    TITLE   -->
                  <a class="msg-file-meta__title file__name break-word cursor_pointer _fileGo">{{ file.title }}</a>
                  <span class="bullet">•</span>
                  {{#unless file.isIntegrateFile}}
                    {{#if file.size}}
                    <!--    SIZE AND FILE TYPE  -->
                    <span class="msg-file-meta-info">{{ file.size }}</span>
                    {{/if}}
                  {{/unless}}
                  <span class="msg-file-meta-info">{{ file.type }}</span>
                  {{#if file.hasPreview}}
                  <i class="preview-icon icon-angle-down non-selectable _fileToggle"></i>
                  {{/if}}
                </div>
              </div>
              <!--  FILE PREVIEW IMAGE  -->
              <div class="preview-container">
                <!-- MEDIUM SIZE IMAGE THUMBNAIL -->
                <div class="jnd-text-center _compile _fileToggleTarget">
                  {{#if file.hasPreview}}
                    <div class="image_wrapper medium-thumbnail medium-thumbnail-wrapper cursor_pointer _fileExpand"
                         image-view="{{file.imageUrl}}"
                         image-width="{{file.width}}"
                         image-height="{{file.height}}"
                         image-max-width="360"
                         image-max-height="270"
                         has-loading-bar="true">
                      <div class="msg-file-actions-content non-selectable">
                        <div class="msg-file-actions">
                          <div class="action-group">
                            <div class="action-item"
                                 jnd-tooltip-trigger="{{translate '@btn-comment'}}"
                                 data-direction="top">
                              <!--  MORE  -->
                        <span class="action-comment _fileDetailComment">
                          <i class="icon-comment"></i>
                          <span class="comment-count-{{file.id}}">{{file.commentCount}}</span>
                        </span>
                            </div>
                            {{#unless file.isIntegrateFile}}
                              <div class="action-item"
                                   jnd-tooltip-trigger="{{translate '@common-download'}}"
                                   data-direction="top">
                                <!--  DOWNLOAD  -->
                                <a class="action-file-download file_action _fileDownload" {{{ attrs.download }}}>
                                  <i class="icon-download"></i>
                                </a>
                              </div>
                            {{/unless}}
                            <div class="action-item"
                                 jnd-tooltip-trigger="{{translate '@file-action-more'}}"
                                 data-direction="top">
                              <!--  MORE  -->
                              <i class="action-file-more icon-cog _fileMore"></i>
                            </div>
                          </div>
                          <div class="action-group">
                            <div class="action-item"
                                 jnd-tooltip-trigger="{{translate 'common-file-detail'}}"
                                 data-direction="top">
                              <!--  FILE DETAIL -->
                              <i class="action-file-detail icon-arrow-right _fileDetail"></i>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  {{else}}
                    <div class="image_wrapper medium-thumbnail msg-file-body__img__background cursor_pointer"
                         image-view
                         image-width="{{file.width}}"
                         image-height="{{file.height}}"
                         image-max-width="360"
                         image-max-height="270"
                         has-loading-bar="true"></div>
                  {{/if}}
                </div>

                {{#unless file.unshared}}
                  <!-- Star -->
                  <div class="msg-extra file-uploaded-extra">
                    <span data-feedback="true"
                          class="cursor_pointer msg-item-star msg-item-icon msg-item-circle star-{{file.id}} _star {{css.fileStar}}">
                      <i class="icon-star-on"></i>
                    </span>
                  </div>
                {{else}}

                {{/unless}}
              </div>
            {{/if}}
          {{else}}
            <!--  UNSHARED FILE  -->
            <div class="preview-container">
              <div class="preview-card cursor_pointer _compile">
                <div class="msg-file-actions-content actions-dimmed _fileGo"></div>
                <div class="msg-file-actions-content non-selectable">
                  <div class="msg-file-actions">
                    <div class="action-group">
                      <div class="action-item"
                           jnd-tooltip-trigger="{{translate '@btn-file-detail'}}"
                           data-direction="top">
                        <!--  FILE DETAIL -->
                        <i class="action-file-detail icon-arrow-right _fileDetail"></i>
                      </div>
                    </div>
                  </div>
                </div>

                <!--    FILE TYPE THUMBNAIL -->
                <div class="card-type">
                  <div class="fileicon fileicon-unshared"></div>
                </div>
                <div class="card-info card-unshared">
                  <span class="info-title break-word">{{ file.title }}</span>
                </div>
              </div>
            </div>
          {{/if}}

          {{#unless file.mustPreview}}
            <!--  FILE PREVIEW IMAGE  -->
            <div class="preview-container">
              <div class="preview-card cursor_pointer _compile" >
                <div class="msg-file-actions-content actions-dimmed _fileGo"></div>
                <div class="msg-file-actions-content non-selectable">
                  <div class="msg-file-actions">
                    <div class="action-group">
                      {{#if file.isImageIcon}}
                        <div class="action-item"
                             jnd-tooltip-trigger="{{translate '@btn-image-expand'}}"
                             data-direction="top">
                          <!--  file expand  -->
                          <span class="action-comment _fileExpand">
                            <i class="fa-search-plus"></i>
                          </span>
                        </div>
                      {{/if}}
                      <div class="action-item"
                           jnd-tooltip-trigger="{{translate '@btn-comment'}}"
                           data-direction="top">
                        <!--  MORE  -->
                      <span class="action-comment _fileDetailComment">
                        <i class="icon-comment"></i>
                        <span class="comment-count-{{file.id}}">{{file.commentCount}}</span>
                      </span>
                      </div>
                      {{#unless file.isIntegrateFile}}
                        <div class="action-item"
                             jnd-tooltip-trigger="{{translate '@common-download'}}"
                             data-direction="top">
                          <!--  DOWNLOAD  -->
                          <a class="action-file-download file_action _fileDownload" {{{ attrs.download }}}>
                            <i class="icon-download"></i>
                          </a>
                        </div>
                      {{/unless}}
                      <div class="action-item"
                           jnd-tooltip-trigger="{{translate '@file-action-more'}}"
                           data-direction="top">
                        <!--  MORE  -->
                        <i class="action-file-more icon-cog _fileMore"></i>
                      </div>
                    </div>
                    <div class="action-group">
                      <div class="action-item"
                           jnd-tooltip-trigger="{{translate '@btn-file-detail'}}"
                           data-direction="top">
                        <!--  FILE DETAIL -->
                        <i class="action-file-detail icon-arrow-right _fileDetail"></i>
                      </div>
                    </div>
                  </div>
                </div>

                <!--    FILE TYPE THUMBNAIL -->
                <div class="card-type">
                  <div class="fileicon fileicon-{{ file.icon }}" ></div>
                </div>
                <div class="card-info">
                  <div class="info-group">
                    <span class="info-writer">{{ msg.extWriterName }}</span>
                    <span class="info-created-time">{{ msg.extTime }}</span>
                    <span class="info-comment-count">
                      <i class="icon-comment"></i>
                      <span class="comment-count-{{file.id}}">{{file.commentCount}}</span>
                    </span>
                  </div>
                  <div class="info-group-bottom">
                    <span class="info-title break-word">{{ file.title }}</span>
                    {{#unless file.isIntegrateFile}}
                      {{#if file.size}}
                        <!--    SIZE AND FILE TYPE  -->
                        <span class="info-size">{{ file.size }}</span>
                      {{/if}}
                    {{/unless}}
                    <span class="info-type">{{ file.type }}</span>
                  </div>
                </div>
              </div>

              {{#unless file.unshared}}
                <!-- Star -->
                <div class="msg-extra file-uploaded-extra">
                  <span data-feedback="true"
                        class="cursor_pointer msg-item-star msg-item-icon msg-item-circle star-{{file.id}} _star {{css.fileStar}}">
                    <i class="icon-star-on"></i>
                  </span>
                </div>
              {{/unless}}
            </div>
          {{/unless}}
        {{/if}}
      </div>
    </div>

    {{#if hasCommentAllDesc}}
      <div class="msg-item comment-all">
        <div class="continue-comment-body">
          <!--    COMMENT CONTENT -->
          <div class="comment-content">
            <span class="comment-all-desc _fileGo">
              {{{translate.commentAllDesc}}}
            </span>
          </div>
        </div>
      </div>
    {{/if}}

    <div class="msg-item comment-continue">
      <!--    HEADER PART -->
      <!--    DISPLAYS WRITER WHEN IT IS NOT TITLE COMMENT    -->
      <!--    WHEN IT IS TITLE COMMENT, APPLIES DIFFERENT CSS FORMAT  -->
      <div class="msg-item-header">
        <!--    CONTINUED COMMENT ON SAME FILE  -->
        <div class="continue-comment-body">
          <!-- COMMENT GUIDE LINE -->
          <div class="comment-guide">
            <div class="guide-line"></div>
            <div class="guide-line-bg"></div>
            {{#unless isChild}}
              <!--  User Thumbnail -->
              <img class="comment-writer cursor_pointer user-profile user-thumb _user" src="{{ msg.exProfileImg }}"/>
            {{/unless}}
          </div>
          <!--    COMMENT CONTENT -->
          <div class="comment-content">
            <!--    WRITER  -->
            <span class="msg-item-header__name cursor_pointer {{css.disabledMember}} _user">
              <!-- TODO: WHAT IS THIS??   정책상 항상 댓글의 작성자가 다 보여야 한다면 extWriterName을 그냥 무조건 사용합시다. -->
              <span> {{ msg.extWriterName }} </span>
            </span>
            {{#if isSticker}}
            <div>
              <img class="sticker size_5" src="{{ msg.message.content.url }}"/>
              <span class="msg-item-header__created">{{ msg.extTime }}</span>
              <span class="badge unread-badge">{{ msg.unreadCount }}</span>
            </div>
            {{else}}
            <!--    CONTENT TEXT    -->
            <span class="comment-text">
              <span class="keep _compile" jnd-ignore-braces>{{{ msg.message.content.body }}}</span>
              <!--    CREATED TIME    -->
              <span class="msg-item-header__created">{{ msg.extTime }}</span>
              <span class="badge unread-badge">{{ msg.unreadCount }}</span>
            </span>
            {{/if}}
          </div>
        </div>
        <!-- Star -->
        <div class="msg-extra msg-extra-comment-continue">
          {{#if hasStar}}
          <span class="cursor_pointer msg-item-star msg-item-icon msg-item-circle star-{{msg.message.id}} _star {{css.star}}">
            <i class="icon-star-on"></i>
          </span>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
