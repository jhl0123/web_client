<div class="message file" id="{{msg.id}}">
  <!--    COMMENT
        최초 댓글
        DISPLAY COMMENT BODY WHEN IT IS TITLE
        IF CURRENT COMMENT IS NOT TITLE, CONTENT GETS DISPLAYED WITHIN HEADER -->
  <div class="msg-header">
    <i class="member-profile icon-chat"></i>
  </div>
  <!-- FILE -->
  <div class="msg-file {{css.unshared}} {{css.archived}}">
    {{#if isArchived}}
      <!--  ARCHIVED FILE PREVIEW IMAGE  -->
      <div class="preview-container">
        <div class="preview-card cursor_pointer _compile _fileDetail">
          <!--  ARCHIVED FILE -->
          <div class="card-info card-archived">
            <div class="card-type">
              <div class="fileicon fileicon-archived"></div>
            </div>
            <span class="info-title">{{translate '@common-deleted-file-title'}}</span>
          </div>
        </div>
      </div>
    {{else}}
      {{#if file.hasPermission}}
        {{#if file.mustPreview}}
          <!--  FILE INFO -->
          <div class="msg-file-meta">
            <div class="msg-file-meta-up">
              <!--  NOT ARCHIVED FILE -->
              <!--    TITLE   -->
              <a class="msg-file-meta__title file__name break-word cursor_pointer _fileDetail">{{ file.title }}</a>
              <span class="bullet">•</span>
              {{#unless file.isIntegrateFile}}
                {{#if file.size}}
                  <!--    SIZE AND FILE TYPE  -->
                  <span class="msg-file-meta-info">{{ file.size }}</span>
                {{/if}}
              {{/unless}}
              <span class="msg-file-meta-info">{{ file.type }}</span>
              <i class="preview-icon icon-arrow-up-fill non-selectable _fileToggle"></i>
            </div>
          </div>

          <!--  FILE PREVIEW IMAGE  -->
          <div class="preview-container">
            <!-- MEDIUM SIZE IMAGE THUMBNAIL -->
            <div class="jnd-text-center _compile _fileToggleTarget">
              {{#if file.hasPreview}}
                <div class="image_wrapper medium-thumbnail medium-thumbnail-wrapper cursor_pointer"
                     image-view="{{file.imageUrl}}"
                     image-width="{{file.width}}"
                     image-height="{{file.height}}"
                     image-orientation="{{file.orientation}}"
                     image-max-width="360"
                     image-max-height="270"
                     has-loading-bar="true">
                  <div class="msg-file-actions-content non-selectable">
                    <div class="msg-file-actions">
                      {{#unless file.isUnshared}}
                        <div class="action-group">
                          {{#unless file.isIntegrateFile}}
                            <div class="action-item"
                                 jnd-tooltip-trigger="{{translate '@common-download'}}"
                                 data-direction="top">
                              <!--  DOWNLOAD  -->
                              <a class="action-file-download file_action _fileDownload" {{{ attrs.download }}}>
                                <i class="icon-download"></i>
                              </a>
                            </div>
                          {{/unless}}
                          <div class="action-item"
                               jnd-tooltip-trigger="{{translate '@file-action-more'}}"
                               data-direction="top">
                            <!--  MORE  -->
                            <i class="action-file-more icon-cog _fileMore"></i>
                          </div>
                        </div>
                      {{/unless}}
                    </div>
                  </div>
                </div>
              {{else}}
                <div class="image_wrapper medium-thumbnail medium-thumbnail-wrapper cursor_pointer"
                     image-view
                     image-width="{{file.width}}"
                     image-height="{{file.height}}"
                     image-orientation="{{file.orientation}}"
                     image-max-width="360"
                     image-max-height="270"
                     has-loading-bar="true"></div>
              {{/if}}
            </div>

            {{#unless file.isUnshared}}
              <!-- Star -->
              <div class="msg-extra file-uploaded-extra non-selectable">
            <span class="cursor_pointer msg-item-star msg-item-icon msg-item-circle _fileStar _feedbackStar _star-{{file.id}} {{css.fileStar}}">
              <i class="{{css.fileStarIcon}}"></i>
            </span>
              </div>
            {{/unless}}
          </div>
        {{else}}
          <!--  FILE PREVIEW IMAGE  -->
          <div class="preview-container">
            <div class="preview-card cursor_pointer _compile _fileDetail">
              <div class="msg-file-actions-content non-selectable">
                <div class="msg-file-actions">
                  {{#unless file.isUnshared}}
                    {{#unless file.isIntegrateFile}}
                      <div class="action-group">
                        <div class="action-item"
                             jnd-tooltip-trigger="{{translate '@common-download'}}"
                             data-direction="top">
                          <!--  DOWNLOAD  -->
                          <a class="msg-item-icon _fileDownload" {{{attrs.download}}}>
                            <i class="icon-download"></i>
                          </a>
                        </div>
                      </div>
                    {{/unless}}
                    <div class="action-group">
                      <div class="action-item"
                           jnd-tooltip-trigger="{{translate '@file-action-more'}}"
                           data-direction="top">
                        <!--  MORE  -->
                      <span class="msg-item-icon msg-item-circle msg-item-more">
                        <i class="action-file-more icon-cog _fileMore"></i>
                      </span>
                      </div>
                      <!-- Star -->
                      <div class="action-item">
                      <span class="msg-item-icon msg-item-star msg-item-circle _fileStar _feedbackStar _star-{{file.id}} {{css.fileStar}}">
                        <i class="{{css.fileStarIcon}}"></i>
                      </span>
                      </div>
                    </div>
                  {{/unless}}
                </div>
              </div>

              <!--    FILE TYPE THUMBNAIL -->
              <div class="card-info _fileDetail">
                <div class="card-type">
                  <div class="fileicon fileicon-{{ file.icon }}">
                    {{#if file.hasPdfPreview}}
                      <div class="card-expand _pdfPreview">
                        <!-- pdf preview -->
                        <i class="fa-search-plus"></i>
                        <span translate>@filecard-button-preview</span>
                      </div>
                    {{/if}}
                    {{#if file.hasOriginalImageView}}
                      <div class="card-expand _fileExpand">
                        <!--  file expand  -->
                        <i class="fa-search-plus"></i>
                        <span translate>@btn-image-expand</span>
                      </div>
                    {{/if}}
                  </div>
                </div>
                <div class="info-group">
                  <span class="info-writer inline-overflow-ellipsis">{{ msg.extWriterName }}</span>
                  <span class="info-created-time">{{ file.time }}</span>
                <span class="info-comment-count">
                  <i class="icon-comment"></i>
                  <span class="comment-count-{{file.id}}">{{file.commentCount}}</span>
                </span>
                </div>
                <div class="info-group-bottom">
                  <span class="info-title break-word">{{ file.title }}</span>
                  {{#unless file.isIntegrateFile}}
                    {{#if file.size}}
                      <!--    SIZE AND FILE TYPE  -->
                      <span class="info-size">{{ file.size }}</span>
                    {{/if}}
                  {{/unless}}
                  <span class="info-type">{{ file.type }}</span>
                </div>
              </div>
            </div>
          </div>
        {{/if}}
      {{else}}
        <!--  UNSHARED FILE  -->
        <div class="preview-container">
          <div class="preview-card cursor_pointer _compile _fileDetail">
            <!--    FILE TYPE THUMBNAIL -->
            <div class="card-info card-unshared">
              <div class="card-type">
                <div class="fileicon fileicon-unshared"></div>
              </div>
              <span class="info-title break-word">{{ file.title }}</span>
            </div>
          </div>
        </div>
      {{/if}}
    {{/if}}
  </div>

  {{#if hasCommentAllDesc}}
    <div class="msg-item comment-all">
      <div class="continue-comment-body">
        <!--    COMMENT CONTENT -->
        <div class="comment-content">
        <span class="comment-all-desc _fileDetail">
          {{{translate.commentAllDesc}}}
        </span>
        </div>
      </div>
    </div>
  {{/if}}
</div>

<div class="message comment first" id="{{msg.id}}">
  <!--    HEADER PART -->
  <!--    DISPLAYS WRITER WHEN IT IS NOT TITLE COMMENT    -->
  <!--    WHEN IT IS TITLE COMMENT, APPLIES DIFFERENT CSS FORMAT  -->
  <div class="msg-item msg-item-header">
    <!--    CONTINUED COMMENT ON SAME FILE  -->
    <div class="continue-comment-body">
      <!-- COMMENT GUIDE LINE -->
      <div class="comment-guide">
        <div class="guide-line"></div>
        <div class="guide-line-bg"></div>
        {{#unless isChild}}
          <!--  User Thumbnail -->
          <img class="comment-writer cursor_pointer member-profile member-thumb _user" src="{{ msg.exProfileImg }}"/>
        {{/unless}}
      </div>
      <!--    COMMENT CONTENT -->
      <div class="comment-content">
        <!--    WRITER  -->
        <span class="msg-item-header__name cursor_pointer {{css.disabledMember}} _user">
          <!-- TODO: WHAT IS THIS??   정책상 항상 댓글의 작성자가 다 보여야 한다면 extWriterName을 그냥 무조건 사용합시다. -->
          <span> {{ msg.extWriterName }} </span>
        </span>
        {{#if isSticker}}
          <div>
            <div class="sticker size_5" style="background-image:url('{{msg.message.content.url}}');"></div>
            <span class="msg-item-header__created">{{ msg.extTime }}</span>
            <span class="badge unread-badge">{{ msg.unreadCount }}</span>
          </div>
        {{else}}
          <!--    CONTENT TEXT    -->
        <span class="comment-text">
          <span class="keep _compile" jnd-ignore-braces>{{{ msg.message.content.body }}}</span>
          <!--    CREATED TIME    -->
          <span class="msg-item-header__created">{{ msg.extTime }}</span>
          <span class="badge unread-badge">{{ msg.unreadCount }}</span>
        </span>
        {{/if}}
      </div>
    </div>
    <!-- Star -->
    <div class="msg-extra msg-extra-comment-continue non-selectable">
      {{#if hasStar}}
        <span class="cursor_pointer msg-item-star msg-item-icon msg-item-circle _star _star-{{msg.message.id}} {{css.star}}">
        <i class="{{css.starIcon}}"></i>
      </span>
      {{/if}}
    </div>
  </div>
</div>
